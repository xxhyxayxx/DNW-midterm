                            >210
                            </option>
                            <option value="220"
                            <% if(appliance[0].temp2 === 220){ %> selected
                                    <% } %>
                            >220
                            </option>
                        </select>
                    </label>
                </div>
                <div class="select-box option_item" id="temp3">
                    <p class="form-ttl">Temperature</p>
                    <label for="temperature3">
                        <select name="temp3" class="select_form" id="temperature3" disabled>
